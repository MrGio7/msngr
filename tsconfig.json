{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true,
    "noEmitOnError": true,
    "composite": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@msngr/*": ["packages/*"],
      "/opt/prisma/client": ["packages/db/prisma/client.ts"]
    }
  },
  "exclude": ["node_modules", "cdk.out", "services/web", "dist"]
}
